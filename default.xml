<?xml version="1.0" encoding="UTF-8"?>
<manifest>
    <remote
        name="ubccr"
        alias="upstream"
        fetch="https://github.com/ubccr"
        />
    <remote
        name="aestoltm"
        alias="plotly"
        fetch="https://github.com/aestoltm"
        />
    <default
        remote="ubccr"
        revision="xdmod11.0"
    />

    <!--
    Open XDMoD

    This is the main Open XDMoD repository. It will be installed by default.
    -->
    <project
        name="xdmod"
        groups="xdmod"
        remote="aestoltm"
        revision="xdmod_plotly_conversion"
    />

    <!--
    Open XDMoD Modules

    These are Open XDMoD modules developed by the Open XDMoD team.
    They will be installed by default.
    -->
    <project
        name="xdmod-appkernels"
        groups="appkernels"
        remote="aestoltm"
        revision="xdmod_appkernels_plotly_conversion"
    >
        <linkfile src="." dest="xdmod/open_xdmod/modules/appkernels" />
    </project>
    <project
        name="xdmod-supremm"
        groups="supremm"
        remote="aestoltm"
        revision="xdmod_supremm_plotly_conversion"
    >
        <linkfile src="." dest="xdmod/open_xdmod/modules/supremm" />
    </project>

    <project
        name="xdmod-introspection"
        groups="introspection"
        revision="main"
    >
        <linkfile src="." dest="xdmod/open_xdmod/modules/introspection" />
    </project>

    <project
        name="xdmod-xsede"
        groups="xsede"
        remote="aestoltm"
        revision="xdmod_xsede_conversion"
    >
        <linkfile src="." dest="xdmod/open_xdmod/modules/xsede" />
    </project>
    <!--
    Related Tools

    These projects are tools used by Open XDMoD but are not part of it.
    They are included for convenience, but they are not installed by default.
    -->
    <project
        name="supremm"
        groups="notdefault,supremm,tools"
        revision="master"
    />
    <project
        name="akrr"
        groups="notdefault,appkernels,tools"
        revision="master"
    />
</manifest>
